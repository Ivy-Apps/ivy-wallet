<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="sc_add_expense"
        android:enabled="true"
        android:icon="@drawable/ic_expense"
        android:shortcutShortLabel="@string/add_expense"
        android:shortcutLongLabel="@string/add_expense"
        android:shortcutDisabledMessage="@string/add_expense">
        <intent android:action="ivy.wallet.intent.action.add_transaction">
            <extra
                android:name="add_transaction_type_extra"
                android:value="EXPENSE" />
        </intent>
    </shortcut>
    <shortcut
        android:shortcutId="sc_add_income"
