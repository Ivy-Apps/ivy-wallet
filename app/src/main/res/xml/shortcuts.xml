                android:name="add_transaction_type_extra"
                android:value="INCOME" />
        </intent>
    </shortcut>
    <shortcut
        android:shortcutId="sc_add_transfer"
        android:enabled="true"
        android:icon="@drawable/ic_transfer"
        android:shortcutShortLabel="@string/account_transfers"
        android:shortcutLongLabel="@string/account_transfers"
        android:shortcutDisabledMessage="@string/account_transfers">
        <intent android:action="ivy.wallet.intent.action.add_transaction">
            <extra
                android:name="add_transaction_type_extra"
                android:value="TRANSFER" />
        </intent>
